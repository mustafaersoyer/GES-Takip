<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.github.anastr.speedviewlib.SpeedView
        android:id="@+id/speedView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:sv_indicator="KiteIndicator"
        app:sv_unit="KW"
        app:sv_indicatorColor="@color/indicator"
        app:sv_lowSpeedColor="@color/low_speed"
        app:sv_mediumSpeedColor="@color/medium_speed"
        app:sv_highSpeedColor="@color/high_speed"
        app:sv_lowSpeedPercent="40"
        app:sv_mediumSpeedPercent="80"
    />


</android.support.constraint.ConstraintLayout>